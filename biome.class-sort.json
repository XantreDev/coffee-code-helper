{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "extends": ["./biome.base.json"],
  "files": {
    "include": ["src/**/*.tsx"]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "nursery": {
        "useSortedClasses": "error"
      }
    }
  },
  "organizeImports": {
    "enabled": false
  }
}
